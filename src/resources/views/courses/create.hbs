<div class="mt-4">
  <h3>
    Tạo khóa học
  </h3>
  <form method="POST" action="/courses/store">
    <div class="form-group">
      <label for="name">Tên khóa học</label>
      <input
        type="text"
        class="form-control"
        id="name"
        name="name"
        placeholder="Nhập tên khóa học"
      />
    </div>

    <div class="form-group">
      <label for="description">Mô tả</label>
      <input
        type="text"
        class="form-control"
        id="description"
        name="description"
        placeholder="Nhập mô tả"
      />
    </div>

    <div class="form-group">
      <label for="videoId">videoId</label>
      <input
        type="text"
        class="form-control"
        id="videoId"
        name="videoId"
        placeholder="Nhập videoId"
      />
    </div>

    <div class="form-group">
      <label for="level">level</label>
      <input
        type="text"
        class="form-control"
        id="level"
        name="level"
        placeholder="Nhập level"
      />
    </div>

    <button type="submit" class="btn btn-primary">Đăng</button>
  </form>
</div>